{
  "allowJs": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "paths": {
      "*": ["*", "src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}